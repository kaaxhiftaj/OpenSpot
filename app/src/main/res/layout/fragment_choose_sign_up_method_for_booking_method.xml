    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200sp"
            android:layout_height="100sp"
            android:src="@drawable/logo_dark2"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:gravity="center"
            android:text="Connect with OPENSPOT \nto see your bookings"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/btnFb"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_fbbutton"
        android:layout_gravity="center"
            android:drawableLeft="@drawable/facebook"
            android:paddingLeft="10sp"
        android:text="CONNECT WITH FACEBOOK"
        android:textColor="#fff"
        android:layout_marginTop="30sp"/>
        <Button
            android:id="@+id/btnEmail"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn_green"
            android:layout_gravity="center"
            android:text="CONNECT WITH EMAIL"
            android:textColor="#fff"
            android:layout_marginTop="20sp"/>
    </LinearLayout>

</LinearLayout>
