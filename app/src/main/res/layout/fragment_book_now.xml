<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.techease.openspot.fragments.BookNowFragment">

    <ImageView
        android:layout_width="180sp"
        android:layout_height="70sp"
        android:src="@drawable/logo_dark2"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/dotted_rectangle"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOOKING INFORMATION"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvGroundNameBookNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="QATAR CLUB" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOHA"
                android:layout_marginLeft="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="BOOKING TIME"/>
                <TextView
                    android:id="@+id/tvTimeBookNow"
                    android:layout_width="70sp"
                    android:layout_height="wrap_content"
                    android:text="5 PM to 5:30 PM"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="SPORT"/>
                <TextView
                    android:id="@+id/tvTypeBookNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FOOTBALL"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="PRICE"/>
                <TextView
                    android:id="@+id/tvPriceBookNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 QAR"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="112sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnBookNow"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:background="@drawable/custom_btn_green"
        android:text="Book Now!"
        android:textColor="#fff"
        android:textSize="17sp"/>
</LinearLayout>
