<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="com.techease.openspot.fragments.BookingDetailsFragment">

<android.support.v7.widget.RecyclerView
    android:id="@+id/rvGroundDetailImage"
    android:layout_marginTop="10sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    >
</android.support.v7.widget.RecyclerView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:background="#fff"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tvGroundDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QATAR CLUB"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="5sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOHA"
                android:textSize="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Information:"
                android:textSize="12sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                />
            <TextView
                android:id="@+id/tvInfoGroundDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="outdoor football field"
                android:textSize="10sp"
                android:gravity="left"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="5sp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="2sp"
        android:layout_height="match_parent"
        android:layout_marginLeft="2sp"
        android:background="#eee"/>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:id="@+id/layoutFavourite"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/like"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD TO \nFAVOURITE"
            android:textSize="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="2sp"
        android:layout_height="match_parent"
        android:layout_marginLeft="2sp"
        android:background="#eee"/>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCATION"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:text="TODAY EVENING FOOTBALL"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:layout_marginLeft="5sp"
            />
        <Button
            android:id="@+id/btnChange"
            android:layout_width="0sp"
            android:layout_weight="0.3"
            android:layout_height="35sp"
            android:layout_gravity="center"
            android:text="CHANGE"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="10sp"
            android:textColor="#fff"
            android:background="@drawable/custom_btn_green"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvGroundDetailTimes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="70sp"
        android:layout_marginTop="10sp"></android.support.v7.widget.RecyclerView>
</LinearLayout>
    </ScrollView>
</LinearLayout>
