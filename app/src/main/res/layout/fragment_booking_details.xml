<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    tools:context="com.techease.openspot.fragments.BookingDetailsFragment">
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<android.support.v7.widget.RecyclerView
    android:id="@+id/rvGroundDetailImage"
    android:layout_marginTop="10sp"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    >
</android.support.v7.widget.RecyclerView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:background="#fff"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tvGroundDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QATAR CLUB"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="5sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOHA"
                android:textSize="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Information:"
                android:textSize="12sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                />
            <TextView
                android:id="@+id/tvInfoGroundDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="outdoor football field"
                android:textSize="10sp"
                android:gravity="left"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="5sp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="2sp"
        android:layout_height="match_parent"
        android:layout_marginLeft="2sp"
        android:background="#eee"/>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:id="@+id/layoutFavourite"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/like"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD TO \nFAVOURITE"
            android:textSize="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:layout_gravity="center"
            android:layout_marginBottom="10sp"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="2sp"
        android:layout_height="match_parent"
        android:layout_marginLeft="2sp"
        android:background="#eee"/>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"/>
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCATION"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:text="TODAY EVENING FOOTBALL"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:layout_marginLeft="5sp"
            />
        <Button
            android:id="@+id/btnChange"
            android:layout_width="0sp"
            android:layout_weight="0.3"
            android:layout_height="35sp"
            android:layout_gravity="center"
            android:text="CHANGE"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="10sp"
            android:textColor="#fff"
            android:background="@drawable/custom_btn_green"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvGroundDetailTimes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        />
</LinearLayout>
    </ScrollView>
</LinearLayout>
       <LinearLayout
           android:id="@+id/bottomViewBookingDetail"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#fff"
           android:visibility="gone"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10sp"
               android:layout_marginTop="20sp"
               android:layout_marginRight="10sp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="0sp"
                   android:layout_weight="0.8"
                   android:layout_height="wrap_content"
                   android:text="Date"
                   android:textStyle="bold"
                   />
               <ImageView
                   android:id="@+id/ivCloseBookingDetail"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="right"
                   android:src="@drawable/close"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_marginTop="10dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Today"
                   android:textSize="13sp"
                   android:textStyle="bold"/>


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Wednesday"
                   android:layout_marginLeft="10dp"
                   android:textSize="13sp"
                   android:textStyle="bold"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Thursday"
                   android:layout_marginLeft="10dp"
                   android:textSize="13sp"
                   android:textStyle="bold"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Friday"
                   android:layout_marginLeft="10dp"
                   android:textSize="13sp"
                   android:textStyle="bold"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Saturady"
                   android:layout_marginLeft="10dp"
                   android:textSize="13sp"
                   android:textStyle="bold"/>
           </LinearLayout>
           <LinearLayout
               android:layout_height="70dp"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_marginTop="10dp"
               android:gravity="center"
               android:layout_gravity="center">

               <android.support.v7.widget.RecyclerView
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:orientation="horizontal"
                   android:id="@+id/dayslistview">
               </android.support.v7.widget.RecyclerView>

           </LinearLayout>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Time"
               android:layout_marginLeft="10dp"
               android:textSize="15sp"
               android:textStyle="bold"
               android:layout_marginTop="10dp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginLeft="10sp"
               >

               <Button
                   android:layout_width="80sp"
                   android:layout_height="wrap_content"
                   android:background="@drawable/custom_rounded_shape"
                   android:textColor="#fff"
                   android:layout_marginTop="5sp"
                   android:textSize="13sp"
                   android:text="MORINING    7AM - 11AM"/>


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="NOON 7AM"
                   android:textSize="12dp"
                   android:gravity="center"
                   android:layout_marginLeft="20dp"
                   android:textColor="#BDBDBD" />


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="AFTERNOON
7AM - 5PM"
                   android:textSize="12dp"
                   android:gravity="center"
                   android:layout_marginLeft="30dp"
                   android:textColor="#BDBDBD" />
           </LinearLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Durration"
               android:layout_marginLeft="10dp"
               android:textSize="15sp"
               android:textStyle="bold"
               android:layout_marginTop="10dp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10sp"
               android:orientation="horizontal">

               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/custom_rounded_shape"
                   android:text="30 minutes"
                   android:textSize="13sp"
                   android:textAllCaps="false"
                   android:textColor="#FFFFFF" />


               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:text="60 minutes"
                   android:textAllCaps="false"
                   android:textColor="#FFFFFF"
                   android:textSize="12dp" />


               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:text="90 minutes"
                   android:textAllCaps="false"
                   android:textColor="#FFFFFF"
                   android:textSize="12dp" />
           </LinearLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sports"
               android:layout_marginLeft="10dp"
               android:textSize="15sp"
               android:textStyle="bold"
               android:layout_marginTop="10dp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginLeft="10sp"
               android:layout_marginTop="10dp">

               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="FOOTBALL"
                   android:textAllCaps="false"
                   android:textSize="13dp"
                   android:textColor="#FFFFFF"
                   android:background="@drawable/custom_rounded_shape"/>


               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="BASEBALL"
                   android:textSize="12dp"
                   android:layout_marginLeft="10dp"
                   android:textColor="#FFFFFF" />


               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="TENNIS"
                   android:textSize="12dp"
                   android:layout_marginLeft="10dp"
                   android:textColor="#FFFFFF" />
           </LinearLayout>

           <Button
               android:id="@+id/findSpotBookingDetail"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="find a spot"
               android:background="@drawable/custom_rounded_shape"
               android:layout_marginTop="10dp"
               android:gravity="center"
               android:layout_marginBottom="10sp"
               android:textColor="#FFF"
               android:layout_gravity="center"/>
       </LinearLayout>
   </FrameLayout>
</LinearLayout>
