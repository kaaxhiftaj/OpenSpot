<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="com.techease.openspot.fragments.BookingInformationFragment">

<ImageView
    android:layout_width="180sp"
    android:layout_height="70sp"
    android:src="@drawable/logo_dark2"
    android:layout_gravity="center"
    android:layout_marginTop="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/dotted_rectangle"
        android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="BOOKING INFORMATION"
    android:textStyle="bold"
    android:layout_gravity="center"
    android:layout_marginTop="10sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="QATAR CLUB" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOHA"
                android:layout_marginLeft="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOKING TITLE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 PM to 5:30 PM"
                android:layout_marginLeft="50sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPORT"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOOTBALL"
                android:layout_marginLeft="105sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginLeft="35sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRICE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 QAR"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="112sp"
                />
        </LinearLayout>
    </LinearLayout>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:visibility="gone"
            android:id="@+id/btnBookNow"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:background="@drawable/custom_btn_green"
            android:text="Book Now!"
            android:textColor="#fff"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tvConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Connect with OPENSPOT \nto see your bookings"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/btnFbBookingInfo"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_fbbutton"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/facebook"
            android:paddingLeft="10sp"
            android:text="CONNECT WITH FACEBOOK"
            android:textColor="#fff"
            android:layout_marginTop="10sp"/>
        <Button
            android:id="@+id/btnEmailBookingInfo"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn_green"
            android:layout_gravity="center"
            android:text="CONNECT WITH EMAIL"
            android:textColor="#fff"
            android:layout_marginBottom="70sp"
            android:layout_marginTop="20sp"/>
    </LinearLayout>
  </ScrollView>
</LinearLayout>
