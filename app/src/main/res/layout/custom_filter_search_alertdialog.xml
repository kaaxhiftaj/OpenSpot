<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="13sp"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thursday"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saturady"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="70dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center">

        <android.support.v7.widget.RecyclerView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/dayslistview">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10sp"
            >

            <Button
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_rounded_shape"
                android:textColor="#fff"
                android:layout_marginTop="5sp"
                android:textSize="13sp"
                android:text="MORINING    7AM - 11AM"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOON 7AM"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:textColor="#BDBDBD" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AFTERNOON
7AM - 5PM"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:textColor="#BDBDBD" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durration"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10sp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_rounded_shape"
                android:text="30 minutes"
                android:textSize="13sp"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="60 minutes"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="90 minutes"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sports"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOOTBALL"
                android:textAllCaps="false"
                android:textSize="13dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_rounded_shape"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BASEBALL"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:textColor="#FFFFFF" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TENNIS"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/findSpot"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="find a spot"
            android:background="@drawable/custom_rounded_shape"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#FFF"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>