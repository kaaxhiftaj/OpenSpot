<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="com.techease.openspot.fragments.ChooseLoginMethodForProfile">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:orientation="vertical"
    android:background="#fff">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="40sp"/>
</LinearLayout>
    <ImageView
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:src="@drawable/logo_dark2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:text="Connect with OPENSPOT\n to see your Profile"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_gravity="center">
        <com.facebook.login.widget.LoginButton
            android:id="@+id/btnLoginProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />
        <Button
            android:id="@+id/btnFbProfile"
            android:layout_width="220sp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_fbbutton"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/facebook"
            android:paddingLeft="10sp"
            android:text="CONNECT WITH FACEBOOK"
            android:textColor="#fff"
            />
    </FrameLayout>
    <Button
        android:id="@+id/btnEmailProfile"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_btn_green"
        android:layout_gravity="center"
        android:text="CONNECT WITH EMAIL"
        android:textColor="#fff"
        android:layout_marginTop="20sp"/>
</LinearLayout>
